<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="TicTacToe.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Actions">
                    <items>
                        <MenuItem text="Play"
                                  />
                        <MenuItem text="Restart" />
                        <MenuItem text="Quit" onAction="#handleActionQuit" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <GridPane fx:id = "gameBoard" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="b1" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" />
                <Button fx:id="b2" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" />
                <Button fx:id="b3" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" />
                <Button fx:id="b4" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="1" />
                <Button fx:id="b5" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="b6" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button fx:id="b7" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="2" />
                <Button fx:id="b8" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="b9" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </center>
</BorderPane>